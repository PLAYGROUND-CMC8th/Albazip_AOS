<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.albazip">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.Albazip">
        <activity android:name="com.example.albazip.ui.manager.register.SearchPlaceActivity"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>

                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.albazip.ui.common.home.HomeActivity">
        </activity>
        <activity android:name="com.example.albazip.ui.common.login.LoginActivity" />
        <activity android:name="com.example.albazip.ui.common.register.RegisterActivity" >

        </activity>
        <activity android:name=".MainActivity">
        </activity>
    </application>

</manifest>