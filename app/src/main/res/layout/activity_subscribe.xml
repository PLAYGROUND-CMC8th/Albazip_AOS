<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/ibtn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back_arrow"
        android:background="@null"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ibtn_back"
        android:paddingHorizontal="38dp"
        android:layout_marginTop="24dp"
        android:textColor="#343434"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="9sp"
        android:text="알바집을 구독하고,
더 많은 서비스를 이용해보세요!"/>

    <RelativeLayout
        android:id="@+id/rl_no_limit"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@drawable/rectangle_fill_light_yellow_radius_20"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:id="@+id/rl_oval_one"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/oval_fill_yellow">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_margin="6dp"
                android:src="@drawable/ic_worker_add"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제한없는 근무자 추가"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#343434"
            android:layout_toEndOf="@id/rl_oval_one"
            android:letterSpacing="-0.03"
            android:layout_marginTop="15dp"
            android:layout_marginStart="16dp"
            android:lineSpacingExtra="11sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제한없이 더 많은 근무자를 추가할 수 있습니다."
            android:layout_alignStart="@id/tv_title_one"
            android:layout_below="@id/tv_title_one"
            android:layout_marginEnd="21dp"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="#525252"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="5sp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="4dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_plus_rank"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@drawable/rectangle_fill_light_yellow_radius_20"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_no_limit"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:id="@+id/rl_oval_two"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/oval_fill_yellow">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_margin="6dp"
                android:src="@drawable/ic_plus_rank"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="직급 추가"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#343434"
            android:layout_toEndOf="@id/rl_oval_two"
            android:letterSpacing="-0.03"
            android:layout_marginTop="15dp"
            android:layout_marginStart="16dp"
            android:lineSpacingExtra="11sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="직원 직급이 추가되며, 직원에는 매니저와 점장 포지션을 선택할 수 있습니다."
            android:layout_alignStart="@id/tv_title_two"
            android:layout_below="@id/tv_title_two"
            android:layout_marginEnd="21dp"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="#525252"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="5sp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="4dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_plus_work_time"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@drawable/rectangle_fill_light_yellow_radius_20"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_plus_rank"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:id="@+id/rl_oval_three"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/oval_fill_yellow">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_margin="6dp"
                android:src="@drawable/ic_plus_work_time"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="교대근무 추가"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#343434"
            android:layout_toEndOf="@id/rl_oval_three"
            android:letterSpacing="-0.03"
            android:layout_marginTop="15dp"
            android:layout_marginStart="16dp"
            android:lineSpacingExtra="11sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="일정한 스케줄이 아닌 유동적인 스케줄을 관리할 수 있습니다."
            android:layout_alignStart="@id/tv_title_three"
            android:layout_below="@id/tv_title_three"
            android:layout_marginEnd="21dp"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="#525252"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="5sp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="4dp"/>
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ok"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="서비스 준비중"
        android:background="@drawable/btn_disable_yellow_fill_rounded"
        android:textColor="#adadad"
        android:stateListAnimator="@null"
        android:textStyle="bold"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>