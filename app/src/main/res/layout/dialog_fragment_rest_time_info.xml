<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="24dp"
    android:background="@null"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="쉬는시간 적용 방식"
        android:textColor="@color/text4_343434"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="알바집에서 쉬는 시간은 4시간 이상 근무한 날만 적용이 되며, 해당 근무일에 선택하신 쉬는 시간이 일괄 적용돼요."
        android:textColor="@color/text3_6f6f6f"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="왜 4시간 이상부터인가요?"
        android:textColor="@color/text4_343434"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="쉬는 시간은 법적으로 4시간 기준으로 30분 이상의 쉬는 시간을 근로 시간 도중에 부여해야 하기 때문이에요."
        android:textColor="@color/text3_6f6f6f"
        android:textSize="14sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="단, 근로자와 합의하여 쉬는 시간 없이 4시간 근무 후 바로 퇴근하는 것도 가능해요."
        android:textColor="@color/text3_6f6f6f"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="참고로 쉬는 시간은 근로 시간에 포함되지 않아요. 그래서 해당 시간은 제외하고 급여가 계산돼요."
        android:textColor="@color/text3_6f6f6f"
        android:textSize="14sp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="36dp"
        android:background="@drawable/btn_custom_white_cancel"
        android:stateListAnimator="@null"
        android:text="취소"
        android:textColor="@color/customBlack"
        android:textStyle="bold" />


</LinearLayout>