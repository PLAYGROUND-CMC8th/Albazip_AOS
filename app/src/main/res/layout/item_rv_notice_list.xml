<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rv_item_wrote_15"
    android:layout_marginBottom="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/item_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="14dp"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="-2sp"
        android:textColor="#333333"
        android:textSize="14sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@id/item_tv_date"
        app:layout_constraintEnd_toStartOf="@+id/cb_pin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="코로나 관련 매장 관리 공지" />

        <CheckBox
            android:id="@+id/cb_pin"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@null"
            android:buttonTint="@null"
            android:button="@drawable/custom_checkbox_wrote_list"
            android:layout_marginTop="14dp"
            android:layout_width="17dp"
            android:layout_height="17dp"/>

        <TextView
            android:id="@+id/item_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/item_tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="24dp"
            android:textStyle="normal"
            android:textSize="10sp"
            android:layout_marginBottom="14dp"
            android:textColor="#a3a3a3"
            android:letterSpacing="-0.02"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="2sp"
            tools:text="2021. 08. 30"/>

</androidx.constraintlayout.widget.ConstraintLayout>