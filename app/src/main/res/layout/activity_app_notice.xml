<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/white"
        app:contentInsetStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/ibtn_close"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_back_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_horizontal"
                android:letterSpacing="-0.03"
                android:text="공지사항"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#1a000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

    <LinearLayout
        android:id="@+id/ll_notice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_fill_white_radius_gray_15">
            <TextView
                android:id="@+id/tv_title_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="10/31 게시판 오류에 따른 안내"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginHorizontal="24dp"
                android:textColor="#333333"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="-2sp"/>
            <TextView
                android:id="@+id/tv_date_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:layout_below="@id/tv_title_one"
                android:layout_marginHorizontal="24dp"
                android:layout_alignParentStart="true"
                android:textColor="#a3a3a3"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="2sp"
                tools:text="2020. 10. 31."/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rectangle_fill_white_radius_gray_15">
            <TextView
                android:id="@+id/tv_title_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="서비스 보완 강화"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginHorizontal="24dp"
                android:textColor="#333333"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="-2sp"/>
            <TextView
                android:id="@+id/tv_date_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:layout_below="@id/tv_title_two"
                android:layout_marginHorizontal="24dp"
                android:layout_alignParentStart="true"
                android:textColor="#a3a3a3"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="2sp"
                tools:text="2020. 08. 02."/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rectangle_fill_white_radius_gray_15">
            <TextView
                android:id="@+id/tv_title_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="08/10 서비스 장애 공지"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginHorizontal="24dp"
                android:textColor="#333333"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="-2sp"/>
            <TextView
                android:id="@+id/tv_date_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:layout_below="@id/tv_title_three"
                android:layout_marginHorizontal="24dp"
                android:layout_alignParentStart="true"
                android:textColor="#a3a3a3"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="2sp"
                tools:text="2020. 08. 10."/>
        </RelativeLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>