<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_to_do_rv">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_to_do_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_to_do_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="업무명"
            android:paddingVertical="16dp"
            android:layout_marginStart="24dp"
            android:background="@null"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textColorHint="#c9c9c9"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="5sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/ibtn_exit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
            android:id="@+id/ibtn_exit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_x_20_px"
            android:background="@null"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="28dp"
        android:background="#e2e2e2">
    </View>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_to_do_explain"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="24dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_to_do_explain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="업무 설명을 적어주세요."
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="7sp"
            android:paddingVertical="16dp"
            android:textColor="@color/black"
            android:textColorHint="#c9c9c9"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>