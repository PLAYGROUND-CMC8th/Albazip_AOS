<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="219dp"
    android:background="@null">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="1sp"
        android:text="어떤 업무를 추가할까요?"
        android:textColor="@color/customBlack"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_type"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_title">

        <LinearLayout
            android:id="@+id/rl_row_one"
            android:background="@drawable/bg_selector_type"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="58dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_add_together_work"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="17dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#525252"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="3sp"
                android:text="공동업무 추가"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_row_two"
            android:layout_width="match_parent"
            android:background="@drawable/bg_selector_type"
            android:layout_height="58dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_add_alone_work"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="17dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#525252"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="3sp"
                android:text="개인업무 추가"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>