<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/rectangle_fill_light_yellow_radius_20"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:maxLines="1"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="5sp"
        android:text="간판 안으로 들여놓기"/>

    <View
        android:id="@+id/divider"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#ffe6ac"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintEnd_toEndOf="parent">
    </View>

    <TextView
        android:id="@+id/tv_contents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#919191"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="7sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="문 뒤에 들여놓으세요."
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"/>

    <TextView
        android:id="@+id/tv_writer_and_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="사장님 김형준 · 2021.10.21."
        android:layout_marginEnd="16dp"
        android:gravity="end"
        android:paddingEnd="13dp"
        android:textStyle="normal"
        android:textSize="11sp"
        android:textColor="#a3a3a3"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="6sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_contents"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>